<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:minHeight="72dp">
        
        <!-- Left Severity Strip -->
        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginEnd="0dp"/>
            <!-- Design shows thick black bar for behavior 1 in image? Or maybe red? Image shows black for Background, but "Dangerous Perms" card also has black. 
                 Wait, check image again. Ah, they are rounded cards with a black or dark grey vertical bar on the very left EDGE. 
                 It looks like a stylized card edge. I'll stick to black as seen in image for 'Background Recording'. -->
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            
            <TextView
                android:id="@+id/tvBehaviorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/behavior_recording_title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            
            <TextView
                android:id="@+id/tvBehaviorDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/behavior_recording_desc"
                android:textColor="@color/vigilant_text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvBehaviorPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+25 Points"
                android:textColor="@color/vigilant_red"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:visibility="visible"/>
        </LinearLayout>
        
        <ImageView
            android:id="@+id/imgBehaviorIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:layout_marginEnd="16dp"
            app:tint="@color/vigilant_text_secondary"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

