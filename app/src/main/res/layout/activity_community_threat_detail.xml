<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CommunityThreatDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:title="@string/community_report_title"
            app:titleTextAppearance="@style/TextAppearance.Vigilant.Heading"
            app:navigationIcon="@drawable/ic_arrow_back_black"
            android:theme="@style/ThemeOverlay.Material3.ActionBar"
            app:titleTextColor="@color/black"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- App Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <FrameLayout
                    android:id="@+id/flIconContainer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_square_soft_red"
                    android:layout_marginBottom="16dp">
                     <ImageView
                        android:id="@+id/ivAppIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_mic_red"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_voice_recorder"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_spyware"
                    android:textSize="14sp"
                    android:textColor="@color/vigilant_text_secondary"
                    android:layout_marginBottom="12dp"/>
                
                <LinearLayout
                    android:id="@+id/llRiskPill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_nav_pill_active"
                    android:backgroundTint="#FFEBEE"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                    <TextView
                        android:id="@+id/tvRiskLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/risk_critical"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/vigilant_red"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_nav_pill_active"
                android:backgroundTint="#FAFAFA"
                android:padding="16dp"
                android:layout_marginBottom="24dp">
                
                <!-- Reports -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvReportCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stat_reports_val"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stat_reports_label"
                        android:textSize="12sp"
                        android:textColor="@color/vigilant_text_secondary"/>
                </LinearLayout>
                
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/vigilant_stroke"/>

                <!-- First Seen -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvFirstSeen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stat_seen_val"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stat_seen_label"
                        android:textSize="12sp"
                        android:textColor="@color/vigilant_text_secondary"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/vigilant_stroke"/>

                <!-- Last Reported -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvLastReported"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stat_last_val"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stat_last_label"
                        android:textSize="12sp"
                        android:textColor="@color/vigilant_text_secondary"/>
                </LinearLayout>
            </LinearLayout>
            
            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>
                
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/community_desc_1"
                android:textSize="16sp"
                android:textColor="@color/vigilant_text_secondary"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp"/>

            <!-- Behaviors -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reported_behaviors_title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <!-- Behaviors Container -->
            <LinearLayout
                android:id="@+id/llBehaviorsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">
                <!-- Items will be added dynamically -->
            </LinearLayout>


            <!-- Notice -->
             <com.google.android.material.card.MaterialCardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:cardCornerRadius="16dp"
                 app:strokeWidth="0dp"
                 app:cardElevation="0dp"
                 app:cardBackgroundColor="@color/vigilant_light_blue_bg"
                 android:layout_marginBottom="24dp">
                 
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:padding="16dp"
                     android:gravity="center_vertical">
                     
                     <ImageView
                         android:layout_width="24dp"
                         android:layout_height="24dp"
                         android:src="@drawable/ic_info_outline"
                         app:tint="@color/vigilant_blue"
                         android:layout_marginEnd="16dp" />
                     
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/community_safety_notice"
                         android:textSize="12sp"
                         android:textColor="@color/vigilant_blue"/>
                 </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:padding="16dp"
        app:elevation="16dp">
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheckDevice"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/action_check_device"
            android:textAllCaps="false"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Vigilant.Button.Pill"
            android:textColor="@color/white"
            android:backgroundTint="@color/vigilant_blue"
            android:layout_marginBottom="8dp"/>
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReportApp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/action_report_this"
            android:textAllCaps="false"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Vigilant.Button.Pill"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/vigilant_blue"
            app:strokeColor="@color/vigilant_blue"
            android:layout_marginBottom="8dp"/>
            
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

