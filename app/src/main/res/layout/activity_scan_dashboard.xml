<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ScanDashboardActivity">

    <!-- Center Pulse/Scan Animation -->
    <FrameLayout
        android:id="@+id/scanContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp">

        <!-- Outer Ripple (Static for now, could be animated via code) -->
        <View
            android:id="@+id/ripple1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/bg_circle_light_blue"
            android:alpha="0.3"
            android:layout_gravity="center"/>
        
        <View
            android:id="@+id/ripple2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/bg_circle_light_blue"
            android:alpha="0.5"
            android:layout_gravity="center"/>

        <!-- Center Circle -->
        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_circle_primary"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_shield_scan_white"
            app:tint="@color/white"
            android:layout_gravity="center"/>
            
    </FrameLayout>
    
    <TextView
        android:id="@+id/tvScanTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scanning Device..."
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/scanContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tvScanSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checking for spyware and threats"
        android:textSize="16sp"
        android:textColor="@color/vigilant_text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvScanTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>
        
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/scanProgress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:indicatorColor="@color/vigilant_blue"
        app:trackColor="@color/vigilant_light_blue_bg"
        app:trackCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvScanSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

