<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GuestModeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="@drawable/abc_ic_ab_back_material"
            app:title="@string/guest_mode_title"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Vigilant.Heading"
            android:theme="@style/ThemeOverlay.Material3.ActionBar" 
            app:navigationIconTint="@color/black"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Icon Circle -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/bg_circle_gray"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_user_x"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    app:tint="@color/vigilant_text_secondary"/>
            </FrameLayout>

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guest_mode_heading"
                android:textAppearance="@style/TextAppearance.Vigilant.Heading"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guest_mode_desc"
                android:textAppearance="@style/TextAppearance.Vigilant.Body"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Card 1: What you can do -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/vigilant_stroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp">



                <!-- Re-doing the content with Unicode bullets since I don't want to make more drawables just for bullets -->
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info_outline"
                            app:tint="@color/vigilant_blue"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/what_you_can_do"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/vigilant_text_primary"
                            android:layout_marginStart="12dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="•  Scan your device for threats"
                        android:textColor="@color/vigilant_text_secondary"
                        android:layout_marginStart="36dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="•  View risk reports"
                        android:textColor="@color/vigilant_text_secondary"
                        android:layout_marginStart="36dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="•  Access removal guides"
                        android:textColor="@color/vigilant_text_secondary"
                        android:layout_marginStart="36dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: What you can't do -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/vigilant_stroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="32dp">

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info_outline"
                            app:tint="@color/vigilant_orange"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/what_you_cant_do"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/vigilant_text_primary"
                            android:layout_marginStart="12dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="•  Post to Community Hub"
                        android:textColor="@color/vigilant_text_secondary"
                        android:layout_marginStart="36dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="•  Sync data across devices"
                        android:textColor="@color/vigilant_text_secondary"
                        android:layout_marginStart="36dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="•  Save long-term history"
                        android:textColor="@color/vigilant_text_secondary"
                        android:layout_marginStart="36dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Continue Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinueGuest"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/continue_guest_action"
                android:textAllCaps="false"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Vigilant.Button.Pill"
                android:textColor="@color/white"
                android:backgroundTint="@color/vigilant_blue"
                android:layout_marginBottom="16dp"/>

            <!-- Create Account Link -->
            <TextView
                android:id="@+id/tvCreateAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_account_instead"
                android:textColor="@color/vigilant_blue"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

