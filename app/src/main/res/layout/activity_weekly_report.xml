<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WeeklyReportActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/title_weekly_report"
            app:titleTextAppearance="@style/TextAppearance.Vigilant.Heading"
             
            app:navigationIcon="@drawable/ic_arrow_back_black"
            android:theme="@style/ThemeOverlay.Material3.ActionBar"
            app:titleTextColor="@color/black"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="24dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_document_grey"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_date_range"
                    android:textColor="@color/vigilant_text_secondary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">
                
                <!-- Threats Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFEBEE"
                    app:strokeWidth="0dp"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_alert_red"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="3"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/vigilant_red"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_threats"
                            android:textSize="12sp"
                            android:textColor="@color/vigilant_red"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Violations Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFF8E1"
                    app:strokeWidth="0dp"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_lock_grey"
                            app:tint="#FFA000"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="12"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#F57C00"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_violations"
                            android:textSize="12sp"
                            android:textColor="#F57C00"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Alerts Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/vigilant_light_blue_bg"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bell_outline_orange"
                            app:tint="@color/vigilant_blue"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="8"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/vigilant_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_alerts"
                            android:textSize="12sp"
                            android:textColor="@color/vigilant_blue"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_risk_trend"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>
            
            <!-- Simplified Bar Graph Representation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginBottom="32dp">
                 <!-- Bars (M T W T F S S) -->
                 <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp" android:background="@color/vigilant_blue" android:layout_margin="4dp"/>
                 <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="60dp" android:background="@color/vigilant_blue" android:layout_margin="4dp"/>
                 <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="30dp" android:background="@color/vigilant_blue" android:layout_margin="4dp"/>
                 <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="80dp" android:background="@color/vigilant_blue" android:layout_margin="4dp"/>
                 <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="50dp" android:background="@color/vigilant_blue" android:layout_margin="4dp"/>
                 <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="20dp" android:background="@color/vigilant_blue" android:layout_margin="4dp"/>
                 <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="90dp" android:background="@color/vigilant_blue" android:layout_margin="4dp"/>
            </LinearLayout>
            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_top_offenders"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>
            
            <!-- Offender 1 -->
            <include layout="@layout/item_threat_card_1" android:id="@+id/offender1"/> 
            <!-- Note: Using existing threat layout, will need to tweak content if distinct -->
        
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:background="@color/white"
        app:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/action_analytics"
            android:textAllCaps="false"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Vigilant.Button.Pill"
            android:textColor="@color/white"
            android:backgroundTint="@color/vigilant_blue"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

