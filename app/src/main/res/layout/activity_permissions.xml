<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PermissionsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Top Shield Icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_shield_outline_blue"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"/>

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/permissions_title"
                android:textAppearance="@style/TextAppearance.Vigilant.Heading"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/permissions_desc"
                android:textAppearance="@style/TextAppearance.Vigilant.Body"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

            <!-- Permission Items -->
            
            <!-- Usage Access -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_rounded_icon">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_usage_access"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/perm_usage"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/vigilant_text_primary"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/perm_usage_desc"
                        android:textColor="@color/vigilant_text_secondary"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Notifications -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_rounded_icon">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_notifications_blue"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/perm_notifications"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/vigilant_text_primary"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/perm_notifications_desc"
                        android:textColor="@color/vigilant_text_secondary"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Accessibility -->
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_rounded_icon">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_settings_blue"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/perm_accessibility"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/vigilant_text_primary"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/perm_accessibility_desc"
                        android:textColor="@color/vigilant_text_secondary"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            
            <!-- Privacy Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_icon"
                android:backgroundTint="#F5F8FF"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="24dp">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_shield_outline_blue"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"/>
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_reassurance"
                    android:textColor="@color/vigilant_blue"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- Continue Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinuePerm"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/continue_action_permissions"
                android:textAllCaps="false"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Vigilant.Button.Pill"
                android:textColor="@color/white"
                android:backgroundTint="@color/vigilant_blue"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

