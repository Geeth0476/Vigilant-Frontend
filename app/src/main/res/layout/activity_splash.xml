<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_subtle"
    tools:context=".SplashActivity">

    <!-- Pulse Ring (Background) -->
    <View
        android:id="@+id/splash_ring"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_splash_ring"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/splash_shield"
        app:layout_constraintEnd_toEndOf="@+id/splash_shield"
        app:layout_constraintStart_toStartOf="@+id/splash_shield"
        app:layout_constraintTop_toTopOf="@+id/splash_shield" />

    <!-- Shield BG -->
    <ImageView
        android:id="@+id/splash_shield"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_vigilant_shield_bg"
        app:layout_constraintBottom_toTopOf="@+id/splash_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Arrow (Overlay) -->
    <ImageView
        android:id="@+id/splash_arrow"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_vigilant_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/splash_shield"
        app:layout_constraintEnd_toEndOf="@+id/splash_shield"
        app:layout_constraintStart_toStartOf="@+id/splash_shield"
        app:layout_constraintTop_toTopOf="@+id/splash_shield" />

    <!-- Text Logo -->
    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vigilant"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/vigilant_logo_dark"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="24dp"
        android:letterSpacing="0.02"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_shield" />

</androidx.constraintlayout.widget.ConstraintLayout>

