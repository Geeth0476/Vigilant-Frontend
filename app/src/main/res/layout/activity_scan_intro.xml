<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ScanIntroActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Scan Logo: Circle with Shield Radar -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/bg_circle_primary"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_shield_scan_white"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/initial_scan_title"
                android:textAppearance="@style/TextAppearance.Vigilant.Heading"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Desc -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/initial_scan_desc"
                android:textAppearance="@style/TextAppearance.Vigilant.Body"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <!-- Scan Items -->
            
            <!-- Installed Apps -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_rounded_icon">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_phone_android_blue"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scan_apps_title"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scan_apps_desc"
                        android:textColor="@color/vigilant_text_secondary"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Permissions (Green Shield) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_rounded_icon"
                    android:backgroundTint="#E8F5E9"> <!-- Light Green -->
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_shield_outline_green"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scan_perms_title"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scan_perms_desc"
                        android:textColor="@color/vigilant_text_secondary"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Background Activity (Orange Wave) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_rounded_icon"
                    android:backgroundTint="@color/vigilant_light_yellow_bg">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_bell_outline_orange" 
                         android:layout_gravity="center"/> <!-- Reusing waveform/alert bell as close proxy for activity -->
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scan_bg_title"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scan_bg_desc"
                        android:textColor="@color/vigilant_text_secondary"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Spacer -->
            <View
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"/>

            <!-- Start Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartScan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/start_scan_action"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Vigilant.Button.Pill"
                android:backgroundTint="@color/vigilant_blue"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

