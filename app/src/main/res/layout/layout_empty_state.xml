<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/padding_xl">

    <ImageView
        android:layout_width="@dimen/icon_size_xxl"
        android:layout_height="@dimen/icon_size_xxl"
        android:src="@drawable/ic_shield_check"
        app:tint="@color/vigilant_text_secondary"
        android:layout_marginBottom="@dimen/margin_medium"/>

    <TextView
        android:id="@+id/tvEmptyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No items found"
        android:textAppearance="@style/TextAppearance.Vigilant.Heading"
        android:layout_marginBottom="@dimen/margin_small"/>

    <TextView
        android:id="@+id/tvEmptyDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try adjusting your filters"
        android:textAppearance="@style/TextAppearance.Vigilant.Body"
        android:gravity="center"/>
</LinearLayout>
