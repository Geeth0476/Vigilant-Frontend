<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".AccountSuccessActivity">

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon Circle -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_circle_success"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_check_outline"
                android:layout_gravity="center"
                android:contentDescription="@null"
                app:tint="@color/vigilant_success_icon"/>
        </FrameLayout>

        <!-- Heading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/success_title"
            android:textAppearance="@style/TextAppearance.Vigilant.Heading"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Subtext -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/success_desc"
            android:textAppearance="@style/TextAppearance.Vigilant.Body"
            android:gravity="center"
            android:layout_marginBottom="48dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/continue_action"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Vigilant.Button.Pill"
            android:backgroundTint="@color/vigilant_blue"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

